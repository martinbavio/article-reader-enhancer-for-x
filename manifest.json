{
  "manifest_version": 3,
  "name": "Article Reader Enhancer for X",
  "version": "1.0.0",
  "description": "Transform X's article reader into a refined, distraction-free reading experience with enhanced typography and layout.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "css": [
        "content-scripts/styles.css"
      ],
      "js": [
        "content-scripts/enhancer.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": []
}
